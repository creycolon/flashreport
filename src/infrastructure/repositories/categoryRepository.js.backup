import { getDatabase } from '../db/database';

export const categoryRepository = {
    getAll: async () => {
        const db = await getDatabase();
        return await db.getAllAsync('SELECT * FROM movement_categories ORDER BY name ASC');
    },

    getByType: async (type) => {
        const db = await getDatabase();
        return await db.getAllAsync('SELECT * FROM movement_categories WHERE type = ? OR type = "BOTH"', [type]);
    }
};
